{
    "index_patterns": ["sra_*"],
    "mappings": {
	"dynamic_templates": [
	    {
		"runs": {
		    "match":   "runs",
		    "mapping": {
			"type":       "nested",
			"include_in_parent": true
		    }
		}
	    },
	    {
		"identifiers": {
		    "match": "identifiers",
		    "mapping": {
			"type":       "nested",
			"include_in_parent": true
		    }
		}
	    },
	    {
		"attributes": {
		    "match": "attributes",
		    "mapping": {
			"type":       "nested",
			"include_in_parent": true
		    }
		}
	    },
	    {
		"attribute_values": {
		    "path_match": "attributes.value",
		    "mapping": {
			"fields": {
			    "keyword": {
				"ignore_above": 256,
				"type": "keyword"
			    }
			},
			"type": "text"
		    }
		}
	    },
	    {
		"lastupdate": {
                    "match": ".*date",
		    "mapping": {
			"type":       "date",
			"format": "yyyy-MM-dd HH:mm:ss"
		    }
		}
	    },
	    {
		"published": {
                    "match": "published",
		    "mapping": {
			"type":       "date",
			"format": "yyyy-MM-dd HH:mm:ss"
		    }
		}
	    },
	    {
		"received": {
                    "match": "received",
		    "mapping": {
			"type":       "date",
			"format": "yyyy-MM-dd HH:mm:ss"
		    }
		}
	    },
	    {
		"xrefs": {
		    "match": "xrefs",
		    "mapping": {
			"type":       "nested",
			"include_in_parent": true
		    }
		}
	    },
	    {
		"file_addons": {
		    "match": "file_addons",
		    "mapping": {
			"type":       "nested",
			"include_in_parent": true
		    }
		}
	    },
	    {
		"reads": {
		    "match": "reads",
		    "mapping": {
			"type":       "nested",
			"include_in_parent": true
		    }
		}
	    }
	]
    }    
}
